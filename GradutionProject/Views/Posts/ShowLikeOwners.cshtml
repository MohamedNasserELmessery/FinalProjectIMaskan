@model IEnumerable<Like>

<div class="modal fade" id="likeOwnersModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">All &nbsp;@Model?.Count()&nbsp;<i style="color:blue" class="fas fa-thumbs-up"></i></h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        @if (item.User.Image == null)
                        {
                            item.User.Image = new Images()
                            {
                                ImgPath = "default-user-image.png"
                            };
                        }
                        <div class="row p-3 mb-3">
                            <div class="col-1">
                                <img src="~/images/@item.User.Image?.ImgPath" style="border-radius:50%" width="50" height="50" />
                            </div>
                            &nbsp;&nbsp;
                            <div class="ml-2 pt-1 col-6">
                                <h4>@item.User?.UserName</h4>
                            </div>
                        </div>
                        <hr />
                    }
                }
            </div>
        </div>
    </div>
</div>